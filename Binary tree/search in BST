# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution(object):
    def searchBST(self, root, val):
        """
        :type root: Optional[TreeNode]
        :type val: int
        :rtype: Optional[TreeNode]
        """
        while root is not None:
            if root.val == val: #Found: return the node immediately
                return root

            elif val < root.val: # If value is less, search left 
                root = root.left

            else:
                root = root.right # If value is greater, search right 

        return None   
