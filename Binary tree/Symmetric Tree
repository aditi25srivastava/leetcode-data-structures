# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution(object):
    def isSymmetric(self, root):
        """
        :type root: Optional[TreeNode]
        :rtype: bool
        """
        if not root: # if root is empty
            return True

        def isMirror(left, right): # do i symmetric check and traverse
            if not left and not right: # if both are symmetric i'll return true
                return True
            if not left or not right: # if not symmtric
                return False
            return (left.val == right.val) and \
                   isMirror(left.left, right.right) and \
                   isMirror(left.right, right.left)

        return isMirror(root.left, root.right) #call helper function on left and right subtrees

