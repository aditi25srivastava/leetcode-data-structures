# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class BSTIterator(object):

    def __init__(self, root):
        """
        :type root: Optional[TreeNode]
        """
        self.stack = []
        self._pushAll_left(root) 
            
    def _pushAll_left(self,node): 
        while node: # Push all left descendants of node into stack
            self.stack.append(node)
            node = node.left      

        

    def next(self):
        """
        :rtype: int
        """
        node = self.stack.pop() # Pop top element (current smallest)
        if node.right is not None: # If popped node has right child, push all its left children
            self._pushAll_left(node.right)
        return node.val  # Return value of popped node  
        

    def hasNext(self):
        """
        :rtype: bool
        """
        return len(self.stack) > 0  # Check if stack has elements left to visit
        


# Your BSTIterator object will be instantiated and called as such:
# obj = BSTIterator(root)
# param_1 = obj.next()
# param_2 = obj.hasNext()
