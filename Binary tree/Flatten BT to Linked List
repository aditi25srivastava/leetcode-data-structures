# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution(object):
    def __init__(self):
        self.prev = None
    def flatten(self, root):
        """
        :type root: Optional[TreeNode]
        :rtype: None Do not return anything, modify root in-place instead.
        """
        if root is None:
            return

        self.flatten(root.right) #flatten right subtree first
        self.flatten(root.left)

        root.right = self.prev #Rearrange pointers for flattening
        root.left = None 

        self.prev = root #Update previous to current node
