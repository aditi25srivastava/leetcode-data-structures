class Solution(object):
    def searchMatrix(self, matrix, target):
        """
        :type matrix: List[List[int]]
        :type target: int
        :rtype: bool
        """,
        if not matrix or not matrix[0]:
            return False

        m,n = len(matrix), len(matrix[0])
        left,right = 0,n * m - 1
        while left <= right:
            mid = (left + right)// 2
            row,col = divmod(mid,n)
            val = matrix[row][col]


            if val == target:
               return True
            elif val< target:
                left = mid + 1
            else:
                right = mid - 1

        return False        

